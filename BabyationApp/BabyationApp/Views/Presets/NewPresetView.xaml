<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyationApp.Views.NewPresetView">
  <Grid>
    <StackLayout x:Name="controls" Padding="24,0" VerticalOptions="Center">
      <StackLayout Padding="0,0" Orientation="Horizontal">
        <Label Text="Experience Name" HorizontalOptions="CenterAndExpand" />
        <Button x:Name="helpBtn" Text="Help" HorizontalOptions="CenterAndExpand" />
      </StackLayout>

      <StackLayout Padding="0,0" Orientation="Horizontal">
        <Button x:Name="leftBtn1" Text="Stimulation" HorizontalOptions="CenterAndExpand" />
        <Button x:Name="bothBtn1" Text="Expression" HorizontalOptions="CenterAndExpand" />
      </StackLayout>
      
      <StackLayout Padding="0,0" Orientation="Horizontal">
        <Button x:Name="leftBtn2" Text="Suction" HorizontalOptions="CenterAndExpand" />
        <Button x:Name="bothBtn2" Text="Speed" HorizontalOptions="CenterAndExpand" />
      </StackLayout>

    </StackLayout>
  </Grid>
</ContentView>