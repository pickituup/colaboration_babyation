<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyationApp.Views.ForgotPassView">
  <Grid>
    <StackLayout x:Name="logo" Padding="24,0" VerticalOptions="Center">
      <Label Text="LOGO" HorizontalOptions="Center" />
    </StackLayout>
    <StackLayout x:Name="regForm" Grid.Row="1" Padding="24,0" VerticalOptions="Center">
      <Entry x:Name="emailLbl"  Placeholder="Email" HorizontalTextAlignment="Center" />
      <Button x:Name="requestBtn" Text="Request Password" />
      <Label x:Name="statusLbl" Text="Request sent.  Check your email!" IsVisible="False" HorizontalOptions="Center" />
    </StackLayout>
  </Grid>
</ContentView>