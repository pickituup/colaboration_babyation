<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyationApp.Views.LoginView">
  <Grid>
    <StackLayout x:Name="logo" Padding="24,0" VerticalOptions="Center">
      <Label Text="LOGO" HorizontalOptions="Center" />
    </StackLayout>
    <StackLayout x:Name="loginForm" Grid.Row="1" Padding="24,0" VerticalOptions="Center">
      <Entry Placeholder="Email" HorizontalTextAlignment="Center" />
      <Entry Placeholder="Password" IsPassword="True" HorizontalTextAlignment="Center" />
      <Button x:Name="loginBtn" Text="Login" />
      <Label Text="Or" HorizontalOptions="Center" />
      <Button Text="Facebook &amp; Google" />
    </StackLayout>
    <StackLayout x:Name="disclaimer" Grid.Row="2" Padding="24,0" VerticalOptions="Center">
      <Button x:Name="forgotPassBtn" Text="Forgot Password" />
      <Button x:Name="noAcctBtn" Text="I don't have an account" />
    </StackLayout>
  </Grid>
</ContentView>